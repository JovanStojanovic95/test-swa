<form method="POST" action="/subject/add">
    <div class="selectBox" onclick="showCheckboxes()">
        <select name="category">
            {{#each subject}}
            <option>{{this}}</option>
            {{/each}}
        </select>
        <div class="overSelect"></div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
